---
const infoText = Astro.props.info
const numberOfSlots = Astro.props.numberOfSlots || 1
---
<article>
  <h1>Demo</h1>
  <div class="columns">
    <p>{infoText}</p>
    {numberOfSlots === 3 ? (
      <div class="demo-container">
        <slot name="demo-1" />
      </div>
      <div class="demo-container">
        <slot name="demo-2" />
      </div>
      <div class="demo-container">
        <slot name="demo-3" />
      </div>
    ) : (
      <div class="demo-container">
        <slot />
      </div>
    )}
  </div>
</article>
<style>
  article {
    border: 1px orange solid;
    padding: 1rem;
    border-radius: 0.5rem;
  }
  h1 {
    font-style: italic;
    color: orange;
    border-bottom: 1px orange solid;
    margin: 0; padding: 0 0 0.2rem 0;
    font-size: 1.2rem;
    line-height: 1rem;
    margin-bottom: 0.7rem;
  }
  p {
    margin: 0;
    font-style: italic;
  }
  .demo-container {
    position:relative;
    background: #0f111a;
    padding: 0;
    margin:0;
  }
  .columns {
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    gap: 1.5rem;
  }
  .columns>* {
    flex: 1 1 223px;
    min-width: 0;
  }
</style>
